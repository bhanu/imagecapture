<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @image.image_uri %></h1>
    <a href="<%= url_for :action => :show, :id => @image.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">Cancel</a>
    <a href="<%= url_for :action => :delete, :id => @image.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">Delete</a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @image.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="image[image_uri]" class="fieldLabel">Image uri</label>
            <input type="text" id="image[image_uri]" name="image[image_uri]" value="<%= @image.image_uri %>" <%= placeholder( "Image uri" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
