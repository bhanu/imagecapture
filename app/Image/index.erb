<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Images</h1>
    <a href="<%= Rho::RhoConfig.start_path %>" class="ui-btn-left" data-icon="home" data-direction="reverse">Home</a>
    <a href="<%= url_for :action => :new %>" class="ui-btn-right" data-icon="plus">New</a>
  </div>

  <div data-role="content">
    <ul data-role="listview">
      <li>
        <a href="<%= url_for(:action => :edit) %>">
            <span class="title">Choose Picture</span>
            <span class="disclosure_indicator"/>
        </a>
      </li>

      <% if System::get_property('has_camera') %>

        <li>
            <a href="<%= url_for(:action => :new) %>">
                <span class="title">Take Picture</span>
                <span class="disclosure_indicator"/>
            </a>
        </li>

      <% end %>

      <% @images.each do |image| %>
      
          <li>
            <img src="<%= image.image_uri %>" width="300px"></img>
          </li>
      
          <li>
          <a href="<%= url_for(:action => :delete, :id => image.object) %>">
              <span>Delete</span>
              <span class="disclosure_indicator"/>
          </a>
          </li>
      
      <% end %>
    </ul>
  </div>

</div>
